<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- This style is required for the Settings tab toolbar -->
        <item name="preferenceTheme">@style/AppTheme.PreferenceThemeOverlay</item>
    </style>


    <style name="AppTheme.PreferenceThemeOverlay" parent="@style/PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_settings</item>
    </style>

    <style name="ImageButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">@android:color/white</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>